{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}



   <div class="container mx-auto w-50 border border-primary rounded mt-3 p-4">

    <h1 class="text-center my-3">Inscription</h1>



    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.civilite) }}
       
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {# {{ form_row(registrationForm.agreeTerms) }} #}

         <button type="submit" class="btn btn-outline-primary col-12">Je m'inscris</button>
    {{ form_end(registrationForm) }}

    </div>

    
{% endblock %}
