{# templates/admin/users.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestion des membres{% endblock %}
{% block body %}
<div class="container mt-5">
   

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Civilité</th>
                <th>Date d'Enregistrement</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.civilite }}</td>
                    <td>
                        <a href="{{ path('app_admin_gest_m_edit', {'id': user.id}) }}"  class="text-warning">Modifier</a>
                        <a href="{{ path('app_admin_user_delete', {'id': user.id}) }}"  class="text-danger">Supprimer</a>
                    </td>
                </tr> #}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

